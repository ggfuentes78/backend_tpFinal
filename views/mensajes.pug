html
    head
        title DESAFIO CLASE 26 - INICIO DE SESION
        //- link(href="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        link(rel="stylesheet" href="styles.css")
    body(class="bg-dark text-white")
        h1(class="ms-2 mt-5") MENSAJES
        form(id="formMensajes" class="ms-4 mt-5" style="width:50%;")
            div(class="container-fluid row")
                div(name="listaMensajes" id="listaMensajes" class="listaMensajes")
            div(class="mb-3")
                label(for="email" class="form-label") Email:
                input(type="email" id="email" name="email" class="form-control" required)
                label(class="lblUsuarioInexistente" id="lblUsuarioInexistente" style="visibility:hidden") USUARIO INEXISTENTE 
            div(class="mb-3")
                label(for="mensanje" class="form-label") Mensaje:
                input(type="text" id="mensaje" name="mensaje" class="form-control" required) 
            div
                button(id="enviarMensaje" type="submit" class="btn btn-primary") ENVIAR
        script(src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js")
        script(src="/socket.io/socket.io.js")
        script(src="client.js")